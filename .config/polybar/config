[colors]
background = #21252b
foreground = #dfdfdf
black = #555
black-alt = #333
green = #55aa55
green-alt = #89ca78
red = #FC3C3C
orange = #f5a70a
orange-alt = #b57d0b
grey = #949191

[bar/tdloi]
bottom = true
monitor = eDP
width = 100%
height = 20
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

padding-left = 1
padding-right = 0
module-margin-left = 1
module-margin-right = 1

font-0 = Inconsolata:size=11;2
font-1 = RobotoMono Nerd Font:pixelsize=9;2
font-2 = "Noto Sans CJK JP:size=9;3"
font-3 = Inconsolata:size=10;2

modules-left = i3 vpn
modules-center = cmus
modules-right = cmus-previous cmus-next audio backlight memory cpu temperature fan_speed wireless-network battery date

;Disable system tray
tray-position = left
tray-padding = 5
tray-maxsize = 12

cursor-click = pointer
cursor-scroll = ns-resize

; https://github.com/jaagr/polybar/wiki/Inter-process-messaging
enable-ipc = true

label-focused-foreground = ${colors.black-alt}
label-focused-background = ${colors.green}
label-separator = |
label-separator-padding = 1
label-focused-padding = 1


[module/title]
type = internal/xwindow


[module/vpn]
type = custom/script
exec =  ~/.config/polybar/script/wg
interval = 5
label =  %output%


[module/cmus-previous]
type = custom/script
exec = echo "<"
exec-if = cmus-remote -Q
click-left = cmus-remote -r
interval = 1

[module/cmus-next]
type = custom/script
exec = echo ">"
exec-if = cmus-remote -Q
click-left = cmus-remote -n
interval = 1

[module/cmus]
type = custom/script
exec = ~/.config/polybar/script/cmus.py
exec-if = cmus-remote -Q
label-font = 3
click-left = if cmus-remote -Q | grep -q 'playing'; then cmus-remote -u; else cmus-remote -p; fi
interval = 1


[module/audio]
type = internal/pulseaudio
format-volume-prefix = " "
label-volume-foreground = ${colors.foreground}
# format-volume-underline = #0965e7
format-muted-prefix = " "
format-muted-foreground = ${colors.black}


[module/backlight]
type = internal/backlight
card = amdgpu_bl0
format-prefix = " "
enable-scroll = true


[module/memory]
type = internal/memory
format-prefix = "RAM: "
format-prefix-font = 4
format-prefix-foreground = ${colors.grey}
format-overline = #46dada


[module/cpu]
type = internal/cpu
label = %percentage:2%%
format-prefix = "CPU: "
format-prefix-font = 4
format-prefix-foreground = ${colors.grey}
format-overline = #c63134


[module/temperature]
type = internal/temperature
label =  %temperature-c%
label-warn =  %temperature-c%
base-temperature = 20
warn-temperature = 70
label-overline = #456771


[module/fan_speed]
type = custom/script
exec = sensors | grep fan | awk '{print $2; exit}'
format = <label>
format-suffix = " RPM"
format-suffix-font = 4
format-suffix-foreground = ${colors.grey}
format-overline = #8f70d4


[module/wireless-network]
type = internal/network
interface = wlan0
interval = 3.0
format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
format-connected-overline = ${colors.orange-alt}

ramp-signal-0 = ""
ramp-signal-0-foreground = ${colors.red}
ramp-signal-1 = ""
ramp-signal-1-foreground = ${colors.orange}
ramp-signal-2 = ""
ramp-signal-2-foreground = ${colors.green-alt}
ramp-signal-3 = ""
ramp-signal-3-foreground = ${colors.green}

format-disconnected = Wifi disconneted
format-disconnected-foreground = ${colors.black}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 60

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full-overline = #097cb8
format-charging-overline = #385fab

format-full-prefix = " "
format-full-prefix-foreground = #77C990

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-0-foreground = ${colors.red}
ramp-capacity-1-foreground = ${colors.orange}
ramp-capacity-foreground = ${colors.green-alt}

animation-charging-0 = 
animation-charging-foreground = ${colors.green-alt}


[module/date]
type = internal/date
interval = 1

label = %date% %time%
format-overline = ${colors.green}
label-padding-right = 1

;date =
time = %H:%M
date-alt = " %a %d-%m"
time-alt = %H:%M:%S


[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
