### Configurations
set $mod Mod4
set $i3dir ~/.config/i3

# Font for window titles.
font pango:Inconsolata 10

# class                 border  backgr. text    indicator child_border
client.focused          #21252b #353944 #dfdfdf #2e9ef4   #285577
client.focused_inactive #333333 #404552 #dfdfdf #484e50   #5f676a
client.unfocused        #333333 #595e6b #dfdfdf #292d2e   #222222
client.background       #404552

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Disable title bar
default_border pixel 1

# Center title bar (tabbed)
title_align center

# Enable workspace back and forth
workspace_auto_back_and_forth yes

# Gaps
gaps inner 3

# Move mpv to workspace 5 for fullscreen mode
assign[class="Chromium"] $ws1
    for_window[workspace=$ws1] focus
    workspace $ws1 gaps inner 3
assign[class="Firefox"] $ws2
    for_window[workspace=$ws2] focus
    workspace $ws2 gaps inner 3
assign [title="Code*"] $ws3
assign [class="Code"] $ws3
    for_window [workspace=$ws3] focus
assign [class="mpv"] $ws4
assign [class="feh"] $ws4
    for_window [workspace=$ws4] layout tabbed, focus
    workspace $ws4 gaps inner 0
for_window [title="GIMP Startup"] move workspace $ws5
for_window [class="Gimp"] move workspace $ws5
    for_window [workspace=$ws5] layout tabbed, focus
    workspace $ws5 gaps inner 2

### Autostart
exec dropbox
exec_always --no-startup-id xss-lock -- i3lock -et -i $(fd 'png' $i3dir/lockscreen | shuf -n1)
exec_always --no-startup-id feh --no-fehbg --randomize --bg-fill ~/pictures/wallpaper/*
exec_always polybar tdloi
exec_always fcitx


### Key binding
# reload the configuration file
bindsym $mod+Mod1+b reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Control+$Mod1+slash restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -B 'Yes, exit i3' 'i3-msg exit'"

# i3lock
# NOTICE: Convert for all image in folder to stretched screen png images with imagemagick
# fd . images/ -x convert {} -resize $(xdpyinfo | awk '/dimensions/{print $2}')\! output/{/.}.png
bindsym $mod+Control+l exec i3lock -et -i $(fd 'png' $i3dir/lockscreen | shuf -n1)

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $mod+c layout tabbed
bindsym $mod+v layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Mod1+h move left
bindsym $mod+Mod1+j move down
bindsym $mod+Mod1+k move up
bindsym $mod+Mod1+l move right
bindsym $mod+Control+Left move left
bindsym $mod+Control+Down move down
bindsym $mod+Control+Up move up
bindsym $mod+Control+Right move right

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
bindsym $mod+period move container to workspace next
bindsym $mod+comma move container to workspace prev

# Kill focused window
bindsym $mod+q kill
bindsym $mod+w kill
bindsym $mod+Control+k kill

# Move between workspace
bindsym Mod1+Tab workspace next
bindsym $mod+Tab workspace prev

# Function key
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86AudioRaiseVolume exec amixer set 'Master' 5%+
bindsym XF86AudioLowerVolume exec amixer set 'Master' 5%-
bindsym XF86AudioMute exec amixer set 'Master' toggle
# Alternative key in case using external keyboards
bindsym $mod+equal exec amixer set 'Master' 5%+
bindsym $mod+minus exec amixer set 'Master' 5%-
bindsym $mod+Mod1+BackSpace exec amixer set 'Master' toggle

# Screenshot
bindsym Print exec --no-startup-id flameshot full -p ~/pictures/screenshots
bindsym Shift+Print exec flameshot gui -p ~/pictures/screenshots
bindsym Mod1+Sys_Req exec --no-startup-id flameshot full -p ~/pictures/screenshots -d 4000 # https://github.com/i3/i3/issues/2068#issuecomment-156951279

# Alacritty
bindsym $mod+Return exec alacritty
bindsym $mod+T exec alacritty

# Rofi
bindsym $mod+x exec --no-startup-id rofi -modi drun -show drun
bindsym $mod+z exec --no-startup-id rofi -modi drun -show drun

# Nemo
bindsym $mod+e exec nemo

# Firefox
bindsym $mod+b exec firefox

# Polybar
bindsym $mod+Control+p      exec --no-startup-id polybar-msg cmd toggle
bindsym $mod+Control+Mod1+p exec --no-startup-id polybar-msg cmd restart tdloi

# Mode
# resize window
mode "resize" {
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize grow height 1 px or 1 ppt
        bindsym k resize shrink height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"


set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id \
            i3lock -et -i $(fd 'png' $i3dir/lockscreen | shuf -n1) && sleep 1, mode "default"
    bindsym s exec --no-startup-id \
            i3lock -et -i $(fd 'png' $i3dir/lockscreen | shuf -n1) && sleep 1 && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id \
            i3lock -et -i $(fd 'png' $i3dir/lockscreen | shuf -n1) && sleep 1 && systemctl hibernate, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+F4 mode "$mode_system"

