{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "code-runner.enableAppInsights": false,
    "gitlens.advanced.telemetry.enabled": false,

    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",
    "update.enableWindowsBackgroundUpdates": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#55aa55",
    },
    "workbench.startupEditor": "none",
    "workbench.panel.defaultLocation": "right",
    "workbench.statusBar.feedback.visible": false,
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,

    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**/venv": true,
    },
    "explorer.openEditors.visible": 7,
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.fontFamily": "'RobotoMono Nerd Font Mono', 'Hacked Nerd Font Mono', monospace",
    "terminal.integrated.splitCwd": "workspaceRoot",

    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [ 80, 100, 120 ],
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Fantasque Sans Mono', 'RobotoMono Nerd Font Mono', 'Hacked Nerd Font Mono', monospace",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    "editor.codeLens": false,

    // code-runner
    "code-runner.runInTerminal": true,
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.temporaryFileName": "___",
    "code-runner.clearPreviousOutput": true,
    "code-runner.ignoreSelection": true,

    // vim settings
    "vim.startInInsertMode": true,
    "vim.overrideCopy": false,
    "vim.useCtrlKeys": false,
    "vim.sneak": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-v>": true,
        "<C-o>": true,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "leader", "g", "j" ],
            "commands": [ "workbench.action.focusBelowGroup", ]
        },
        {
            "before": [ "leader", "g", "l" ],
            "commands": [ "workbench.action.focusRightGroup", ]
        },
        {
            "before": [ "leader", "g", "h" ],
            "commands": [ "workbench.action.focusLeftGroup", ]
        },
        {
            "before": [ "leader", "g", "k" ],
            "commands": [ "workbench.action.focusAboveGroup", ]
        },
        {
            "before": [ "leader", "s", "s" ],
            "commands": [ "workbench.action.splitEditor", ]
        },
        {
            "before": [ "leader", "s", "g" ],
            "commands": [ "workbench.action.editorLayoutTwoByTwoGrid", ]
        },
        {
            "before": [ "leader", "s", "j" ],
            "commands": [ "workbench.action.splitEditorDown", ]
        },
        {
            "before": [ "leader", "s", "h" ],
            "commands": [ "workbench.action.splitEditorLeft", ]
        },
        {
            "before": [ "leader", "s", "l" ],
            "commands": [ "workbench.action.splitEditorRight", ]
        },
        {
            "before": [ "leader", "s", "k" ],
            "commands": [ "workbench.action.splitEditorUp", ]
        },
        {
            "before": [ ":" ],
            "commands": [ "workbench.action.showCommands", ]
        },
        {
            "before": [ ";" ],
            "commands": [ "workbench.action.showCommands", ]
        },
        {
            "before": [ "leader", "f", "e" ],
            "commands": [ "workbench.files.action.focusFilesExplorer", ]
        },
        {
            "before": [ "leader", "f", "o" ],
            "commands": [ "outline.focus", ]
        },
    ],

    // gitlens
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.keymap": "none",

    // python
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "/bin/python3",

    // javascript
    "javascript.updateImportsOnFileMove.enabled": "always",

    // latex
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.bind.altKeymap.enabled": true,
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.autoClean.run": "onBuilt",
}
